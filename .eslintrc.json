{
	"env": {
		"browser": false,
		"node": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"overrides": [
		{
			"files": ["ui/**/*.js"],
			"env": {
				"browser": true,
				"node": false,
				"es2021": true
			},
			"parserOptions": {
				"ecmaVersion": "latest",
				"sourceType": "script"
			},
			"globals": {
				"mixpanel": "readonly"
			}
		},
		{
			"files": ["ui/server.js"],
			"env": {
				"browser": false,
				"node": true,
				"commonjs": true,
				"es2021": true
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"no-prototype-builtins": "off",
		"no-debugger": "off",
		"no-useless-escape" : "off",
		"no-unused-vars": "off"
	},
	"globals": {
		"l": true
	},
	"ignorePatterns": [
		"benchmarks/*",
		"testData/*",
		"logs/*",
		"mixpanel-exports/*",
		"tmp/*",
		"ui/public/analytics.js"
	]
}